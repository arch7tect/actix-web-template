# Production Environment Configuration
# Copy this file to .env and update values for production deployment

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3737
APP_ENV=production

# Database Configuration
DATABASE_URL=postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@postgres:5432/memos_db
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECT_TIMEOUT=30

# Logging
RUST_LOG=info,actix_web=info,actix_web_template=info
LOG_FORMAT=json

# Security
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
MAX_REQUEST_SIZE=262144

# Features
ENABLE_SWAGGER=false